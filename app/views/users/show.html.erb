<%= render 'books/left', user: @user, book: @book %>

<h2>Books</h2>
<table>
  <tr>
    <th></th>
    <th>Title</th>
    <th>Option</th>
  </tr>
  <% @books.each do |book|%>
    <tr>
      <td><%= attachment_image_tag @user, :profile_image, :fill, 30, 30, fallback: "no_image.jpg" %></td>
      <td><%= link_to book.title, book_path(book.id) %></td>
      <td><%= book.body %></td>
    </tr>
  <% end %>
</table>
