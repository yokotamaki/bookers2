<!--users/index,show @book=Book.new-->
<h2>New book</h2>
<%= form_with model:book, local:true, class:"new-form" do |f| %>
  <p>Title</p>
    <%= f.text_field :title, class:"new-form-text" %>
  <p>Opinion</p>
    <%= f.text_area :body, class:"new-form-text" %>
    <%= f.submit "Create Book", class:"btn btn-success new-btn" %>
<% end %>