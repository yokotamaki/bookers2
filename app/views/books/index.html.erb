<div class="container">
  <div class="row">

    <!--左側（部分テンプレート）-->
    <div class="col-lg-3">
      <%= render 'books/left', user: @user, book: @book %>
    </div>

    <!--右側-->
    <div class="col-lg-9">
      <h2>Books</h2>
        <table class="table table-hover">
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
          <% @books.each do |book| %>
            <tr>
              <td>
                <%= link_to user_path(book.user.id) do %>
                  <%= attachment_image_tag book.user, :profile_image, :fill,50,50, fallback: "no_image.jpg", size: "50x50" %>
                <% end %>
              </td>
              <td><%= link_to book.title, book_path(book.id) %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </table>
      </div>

    </div>
</div>