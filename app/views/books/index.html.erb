<div class="container">
  <!--バリデーション-->
  <div class="row new-error-msg">
    <% if @book.errors.any? %>
      <%= @book.errors.count %>error
      <% @book.errors.full_messages.each do |message| %>
        <%= message %>
      <% end %>
    <% end %>
  </div>
  <div class="row">

    <!--左側（部分テンプレート）-->
    <div class="col-md-3">
      <%= render 'users/info', user: current_user %>
      <%= render 'books/form', book: @book %>
    </div>

    <!--右側-->
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
        <table class="table table-hover">
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
          <% @books.each do |book| %>
            <tr>
              <td>
                <%= link_to user_path(book.user.id) do %>
                  <%= attachment_image_tag book.user, :profile_image, :fill,50,50, fallback: "no_image.jpg", size: "50x50" %>
                <% end %>
              </td>
              <td><%= link_to book.title, book_path(book.id) %></td>
              <td><%= book.body %></td>
              <td id="favorite-btn_<%= book.id %>" >
                <%= render 'favorites/favorite', book: book %>
              </td>
              <td>
                <%= render 'book_comments/count', book: book %>
              </td>
            </tr>
          <% end %>
        </table>
      </div>

    </div>
</div>