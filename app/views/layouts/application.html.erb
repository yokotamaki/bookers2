<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <script src="https://kit.fontawesome.com/51b68fc5d8.js" crossorigin="anonymous"></script>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="d-block p-2 bg-dark text-white mb-3">

      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <!--ヘッダー左側-->
          <span class="navbar-brand mr-auto"><%= link_to "Bookers", root_path, class:'nav-link text-light' %></span>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></i></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">

          <!--ヘッダー右側-->
          <ul class="navbar-nav ml-auto">
          <% if user_signed_in? %>
            <li class="nav-item">
              <%= link_to "Home", user_path(current_user), class: 'nav-link text-light' %>
            </li>
            <li class="nav-item">
              <%= link_to "Users", users_path, class: 'nav-link text-light'%>
            </li>
            <li class="nav-item">
              <%= link_to "Books", books_path, class: 'nav-link text-light' %>
            </li>
            <li class="nav-item">
              <%= link_to "logout", destroy_user_session_path, method: :delete, class: 'nav-link text-light' %>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to "Home", root_path, class: 'nav-link text-light' %>
            </li>
            <li class="nav-item">
              <%= link_to "About", root_path, class: 'nav-link text-light' %>
            </li>
            <li class="nav-item">
              <%= link_to "sign up", new_user_registration_path, class: 'nav-link text-light' %>
            </li>
            <li class="nav-item">
              <%= link_to "login", new_user_session_path, class: 'nav-link text-light' %>
            </li>
          <% end %>
          </ul>
          </div>
        </nav>
      </div>
    </header>

    <!--サクセスメッセージ-->
    <% flash.each do |key, value| %>
      <%= content_tag(:div, value, class: "#{key} msg") %>
    <% end %>

    <!--各ビュー-->
    <%= yield %>

    <footer class="text-center mt-5">
      <p>CopyRight Infratop.inc</p>
    </footer>

  </body>
</html>
