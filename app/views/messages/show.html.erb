<div class="container mt-5">
    <h2><%= @user.name %>さんとのチャット</h2>
    <div class="message">
      <!--受信・送信したメッセージ-->
      <% @messages.each do |message| %>
        <p><%= message.content %>　by　<%= message.user.name %></p>
      <% end %>
    </div>
      <!--メッセージの入力-->
      <%= form_with model: @message do |f| %>
        <%= f.text_field :content, size: "40" %>
        <%= f.hidden_field :room_id %>
        <%= f.submit "送信" %>
      <% end %>
  </div>
</div>