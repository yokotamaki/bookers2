<div class="container mt-5">
    <h2><%= @user.name %>さんとのチャット</h2>
    <div class="row mt-3">
    <!--受信・送信したメッセージ-->
    <% if @message.present? %>
      <% @messages.each do |msg| %>
        <%= msg.content %><br>
      <% end %>
    <% end %>
  </div>
  <div class="row mt-3">
    <!--メッセージの入力-->
    <%= form_with model: @message do |f| %>
      <%= f.text_area :content, size: "40" %>
      <%= f.hidden_field :room_id, :value => @room.id %>
      <%= f.submit "送信" %>
    <% end %>
  </div>
</div>